extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(action=route('session#create') method='post')
    +input(signInForm, 'email',t('views.users.email'), errors)(type="text")
    +input(signInForm, 'password', t('views.users.password'), errors)(type="password")
    +submit(signInForm)(value=t('views.session.new.submit'))
